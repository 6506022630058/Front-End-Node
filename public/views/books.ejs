<!-- books.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <h1>Books</h1>
    <table>
        <tr class="book-table">
            <td style="color: white;">Title</td>
            <td style="color: white;">Author</td>
            <td style="color: white;">Actions</td>
        </tr>
        <% for(var i=0; i < books.length; i++) { %>
            <tr>
                <td><%= books[i].title %></td>
                <td><%= books[i].author %></td>
                <td>
                    <a href="/book/<%= books[i].id %>">View</a>
                    <a href="/update/<%= books[i].id %>">Edit</a>
                    <a href="/delete/<%= books[i].id %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
    <a href="/create" style="text-align: center;">Create New Book</a>
</body>
</html>